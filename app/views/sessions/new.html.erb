<div class="col-sm-offset-2"><h2>Enter the login credentials</h2></div>
<% if flash[:notice] -%>
<p class='notice'><%=h flash[:notice] %></p>
<% end -%>
<%= form_tag "/session", method: "post", class: "form-horizontal" do %>
  <div class = "form-group">
    <%= label_tag 'username', nil, class: 'col-sm-2 control-label' %>
  <div class="col-sm-4">
    <%= text_field_tag :username, nil, class: "form-control", placeholder: "Email"%>
  </div>
  </div>
  <div class = "form-group">
    <%= label_tag 'password', nil, class: 'col-sm-2 control-label' %>
      <div class="col-sm-4">
        <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password"%>
      </div>
  </div>
  <div class = "form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <%= submit_tag "Login" , class: "btn btn-default"%>
    </div>
  </div>
<% end %>
<div class="col-sm-offset-2">
  <%= link_to "Signup", new_user_path, class: "btn btn-primary btn-lg active", role: "button" %>
</div>