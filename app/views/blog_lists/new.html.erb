<h2>Enter the Blog name</h2>
<% if flash[:notice]%>
  <div class="alert alert-info alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <%= flash[:notice] %>
  <% end %>
</div>
  <%= form_for @blog do |f| %>
  <div class='form-horizontal row col-xs-3'>
  <div class = "form-group">
    <%= label_tag 'name', nil, class: 'col-sm-offset-1 control-label' %>
    <%= f.text_field :name, class: "form-control col-sm-offset-1", placeholder: "Enter blog name" %>
  </div>	
  <div class = "form-group">
    <%= label_tag 'content', nil, class: 'col-sm-offset-1 control-label' %>
    <%= f.text_area :content, class: "form-control col-sm-offset-1", rows: "5", placeholder: "Enter content" %>
  </div>
  <div class = "form-group">
    <div class="col-sm-offset-1">
      <%= f.submit :"save the post" , class: "btn btn-primary" %>
    </div>
  </div>	
<% end %>

