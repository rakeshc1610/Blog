
<%= form_for @comment do |f| %>
<div class='row col-xs-6'>
  <%=f.text_area :message, class: 'form-control col-xs-6 col-sm-4', placeholder: "Enter the comment"  %>
</div>
<div class="form-group">
<div class="col-sm-10">
<%= f.submit  "Enter comment", class: "btn btn-primary btn-lg"%>
</div>
<% end %>

 